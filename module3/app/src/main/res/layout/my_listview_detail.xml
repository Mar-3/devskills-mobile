<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameTextView" android:layout_alignParentStart="true"
            android:layout_marginStart="31dp" android:layout_alignParentTop="true" android:layout_marginTop="18dp"
            android:textSize="24sp"/>
    <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="27dp" android:layout_alignParentTop="true" android:layout_marginTop="57dp"
            android:id="@+id/descriptionTextView"/>
    <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:layout_marginEnd="50dp" android:layout_marginTop="23dp"
            android:id="@+id/priceTextView" android:textSize="20sp"/>
</RelativeLayout>